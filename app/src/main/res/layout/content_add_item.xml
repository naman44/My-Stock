<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Screens.AddItemActivity"
    tools:showIn="@layout/activity_add_item">

    <LinearLayout
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/add_item_name_layout"
        android:hint="@string/hint_add_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/add_item_name_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>

    <Spinner
        android:id="@+id/spinner_product_type"
        android:entries="@array/plastic_type"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </Spinner>

    <Spinner
        android:id="@+id/spinner_item_type"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:entries="@array/item_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </Spinner>

    <include layout="@layout/content_add_product"
        android:visibility="gone"
        android:id="@+id/include_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <include layout="@layout/content_add_raw"
        android:visibility="gone"
        android:id="@+id/include_raw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    </LinearLayout>

    <View
        android:background="@color/colorPrimary"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_add_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>